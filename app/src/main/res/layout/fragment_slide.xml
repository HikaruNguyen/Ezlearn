<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="customSlideViewModel"
            type="com.vn.ezlearn.viewmodel.CustomSlideViewModel" />
    </data>

    <agency.tango.materialintroscreen.parallax.ParallaxLinearLayout
        android:id="@+id/slide_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:clipToPadding="false"
        android:fitsSystemWindows="false"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="164dp">

        <ImageView
            android:id="@+id/image_slide"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="48dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:gravity="center"
            app:imageResource="@{customSlideViewModel.image}"
            app:layout_parallaxFactor="0.6" />

        <TextView
            android:id="@+id/txt_title_slide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textStyle="bold"
            app:layout_parallaxFactor="0.5"
            tools:text="@{customSlideViewModel.title}" />

        <TextView
            android:id="@+id/txt_description_slide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            app:layout_parallaxFactor="0.2"
            tools:text="@{customSlideViewModel.description}" />

    </agency.tango.materialintroscreen.parallax.ParallaxLinearLayout>

</layout>
